################################################################################
# WalletCast Demo Backend - Environment Example (SAFE PLACEHOLDERS ONLY)
#
# This file is intentionally committed and MUST NOT contain real secrets.
# For local overrides, create `env.local` (do not commit it).
################################################################################

# -----------------------------------------------------------------------------
# Runtime
# -----------------------------------------------------------------------------
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_CORS_ORIGINS=["*"]

# Public demo defaults
DEMO_MODE=true
SESSION_SECRET=PLACEHOLDER_SESSION_SECRET

# -----------------------------------------------------------------------------
# Observability (disabled by default in demo)
# -----------------------------------------------------------------------------
LOGFIRE_ENABLE=false
LOGFIRE_TOKEN=PLACEHOLDER_LOGFIRE_TOKEN
BUILD_COMMIT=dev

# -----------------------------------------------------------------------------
# External integrations (placeholders; demo stubs should run without these)
# -----------------------------------------------------------------------------
# RTC provider (LiveKit in the original codebase)
LIVEKIT_URL=https://<redacted-rtc-provider>
LIVEKIT_API_KEY=PLACEHOLDER_RTC_PROVIDER_API_KEY
LIVEKIT_API_SECRET=PLACEHOLDER_RTC_PROVIDER_API_SECRET

# Streaming provider (Mux in the original codebase)
MUX_TOKEN_ID=PLACEHOLDER_STREAMING_PROVIDER_TOKEN_ID
MUX_TOKEN_SECRET=PLACEHOLDER_STREAMING_PROVIDER_TOKEN_SECRET
MUX_WEBHOOK_SIGNING_SECRET=PLACEHOLDER_WEBHOOK_SIGNING_SECRET
MUX_STREAM_BASE_URL=https://<redacted-stream-provider>
MUX_RTMP_INGEST_BASE_URL=rtmps://<redacted-rtmp-ingest>:443
MUX_IMAGE_BASE_URL=https://<redacted-image-provider>
MUX_VIDEO_QUALITY=premium

# Object storage (S3 in the original codebase)
AWS_ACCESS_KEY_ID=PLACEHOLDER_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=PLACEHOLDER_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
S3_CAPTION_BUCKET=PLACEHOLDER_S3_BUCKET
S3_CAPTION_PREFIX=captions

# External business sync (CBX in the original codebase)
CBX_LIVE_BASE_URL=https://<redacted-external-sync>
CBX_LIVE_API_KEY=PLACEHOLDER_EXTERNAL_SYNC_API_KEY

# -----------------------------------------------------------------------------
# Frontend URL composition (placeholders)
# -----------------------------------------------------------------------------
FRONTEND_BASE_URL=https://<redacted-frontend-host>
FRONTEND_INVITE_LINK_BASE_URL=https://<redacted-invite-host>
FRONTEND_BASE_PATH=/demo
FRONTEND_RECORDING_PATH=/_recording
FRONTEND_JOIN_PATH=/join

